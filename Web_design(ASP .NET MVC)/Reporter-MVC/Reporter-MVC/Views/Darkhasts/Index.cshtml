                @Html.DisplayFor(modelItem => item.returnDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.serialNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.postSentDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.postReturnDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.deliveryToApplicant)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.referingOffic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.resendDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sendingType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.officeCost)
            </td>
            <td>
                @Html.ActionLink("ویرایش", "Edit", new { id = item.Id }) 
                @Html.ActionLink("جزئیات", "Details", new { id = item.Id }) <br>
                @Html.ActionLink("حذف", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>