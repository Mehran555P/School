@model IEnumerable<Reporter_MVC.Models.City>

@{
    ViewBag.Title = "Index";
}

<h2>لیست شهر ها</h2>

<p class="modern-links">
    @Html.ActionLink("دیدن درخواست ها", "Index", "Darkhasts", null, new { @class = "link-button primary" })
</p>

<p>
    @Html.ActionLink("افزودن شهر جدید", "Create", null, new { @class = "link-button" })
</p>

<table class="table">
    <tr>
        <th>
            نام شهر
        </th>
        <th>
            کد
        </th>
        <th>
            از کد
        </th>
        <th>
            تا کد
        </th>
        <th>
            نام استان
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fromCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.toCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.stateName)
            </td>
            <td>
                @Html.ActionLink("ویرایش", "Edit", new { id = item.Id }) |
                @Html.ActionLink("جزئیات", "Details", new { id = item.Id }) |
                @Html.ActionLink("حذف", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>