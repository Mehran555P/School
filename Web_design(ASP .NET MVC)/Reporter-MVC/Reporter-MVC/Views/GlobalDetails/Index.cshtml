@model IEnumerable<Reporter_MVC.Models.GlobalDetail>

@{
    ViewBag.Title = "لیست جزئیات سراسری";
}

<h2>لیست</h2>

<p>
    @Html.ActionLink("افزودن", "Create")
</p>
<table class="table">
    <tr>
        <th>
            کد گروه
        </th>
        <th>
            شناسه گروه
        </th>
        <th>
            مقدار
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.groupCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.groupId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.value)
            </td>
            <td>
                @Html.ActionLink("ویرایش", "Edit", new { id = item.Id }) |
                @Html.ActionLink("جزییات", "Details", new { id = item.Id }) |
                @Html.ActionLink("حذف", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>